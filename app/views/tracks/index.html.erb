<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="tables">Favorite Tracks</h1>
      </div>

      <div class="bs-component">
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th></th>
              <th>Artist</th>
              <th>Title</th>
            </tr>
          </thead>
          <tbody>
            <% @tracks.each do |track| %>
              <%= content_tag :tr, class: 'track', 'data-stream-url' => track.stream_url, 'data-id' => track.id do %>
                <td>▶</td>
                <%= content_tag :td, track.user.username %>
                <%= content_tag :td, track.title %>
              <% end %>
            <% end %>
          </tbody>
        </table> 
      </div>
    </div>
  </div>
</div> <!-- /.container -->

<div class="control-panel">
  <button class="btn btn-primary btn-xs btn-play">▶</button>
  <div class="progress-bar-wrapper">
    <div class="progress load-bar" style="width: 0%">
      <div class="progress-bar play-bar" style="width: 0%"></div>
    </div>
  </div>
</div>
